<% include ./partials/header %>
<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
   <div class="col-md-5 p-lg-5 mx-auto my-5">
      <h1 class="display-5 font-weight-normal"><i class="far fa-compass"></i> Start Planning</h1>
      </h1>
      <p class="lead font-weight-normal">View all plans for camping trips and cottage outings here! Or create your own.</p>
      <a class="btn btn-outline-primary" href="/plan/new">Pitch your plan</a>
   </div>
   <div class="product-device box-shadow d-none d-md-block"></div>
   <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
   <hr>
   <table id="indextable" class="table table-bordered">
      <thead>
         <th scope="col">#</th>
         <th scope="col">Creator</th>
         <th scope="col">Plan Name</th>
         <th scope="col">Date of Plan</th>
         <th scope="col">Invited</th>
         <th scope="col"> </th>
      </thead>
      <tbody>
         <% for(var i=0; i < allplans.length; i++) { %>
         <tr>
            <th scope="row"><%=i+1%></th>
            <td><%=allplans[i].creator.username%></td>
            <td><%=allplans[i].name%></td>
            <td><%=allplans[i].beginDate.toDateString()%> - <%=allplans[i].endDate.toDateString()%></td>
            <td><%=allplans[i].invited.length%>/<%=allplans[i].numPpl%></td>
            <td><a id="enterbutton" name="enterbutton" href="/plan/<%=allplans[i]._id%>" class="btn btn-success">View</a></td>
         </tr>
         <% } %>
      </tbody>
   </table>
   <%if(allplans.length == 0) { %>
   <div class="alert alert-danger">
      No active plans
   </div>
   <% } %>
</div>
<% include ./partials/footer %>